{
  "name": "easy-imap",
  "version": "1.0.0",
  "description": "An IMAP client for Node that makes communicating with IMAP servers so easy.",
  "main": "lib/index.js",
  "scripts": {
    "ts:init": "tsc --init",
    "build": "rm -rf lib && tsc",
    "build:watch": "tsc --sourceMap --declarationMap -w",
    "prepublish": "npm run test && npm run build",
    "test": "jest",
    "test:init": "jest --init",
    "lint": "eslint 'src/**' --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "eslint 'src/**' --fix",
      "git add"
    ]
  },
  "keywords": [
    "IMAP",
    "client"
  ],
  "author": "wuchuheng",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.2",
    "ts-jest": "^28.0.3",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "imap": "^0.8.19"
  }
}
